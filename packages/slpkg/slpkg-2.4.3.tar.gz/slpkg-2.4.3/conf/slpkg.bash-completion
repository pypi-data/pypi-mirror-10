_slpkg() 
{
         local cur
         cur=${COMP_WORDS[COMP_CWORD]}

         if [[ "$cur" == -* ]]; then
         COMPREPLY=( $( compgen -W "--autobuild --blacklist --queue --list --check --sync --tracking --print --network --FIND --find --install --upgrade --reinstall --remove --display" -- $cur ))

         else
             _filedir
         fi
}

complete -F _slpkg slpkg
