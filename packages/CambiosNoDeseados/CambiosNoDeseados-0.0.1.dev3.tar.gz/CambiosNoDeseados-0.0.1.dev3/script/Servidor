#!/usr/bin/env python
# -*- coding: utf-8 -*-

import sys

from Cambios.servidor import Servidor


def main(jug, mapa):
    servidor = Servidor(jug, mapa)
    servidor.start()
    servidor.join()

if __name__ == '__main__':
    if len(sys.argv) != 2:
        print "Uso:", sys.argv[0], "Jugadores Mapa"
        print "e.g.", sys.argv[0], "2 Mapa1"
    else:
        jug, mapa = sys.argv[1].split(" ")
        main(jug, mapa)
