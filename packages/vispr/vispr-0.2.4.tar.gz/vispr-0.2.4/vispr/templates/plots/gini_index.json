{
  "width": {{ width }},
  "height": 150,
  "data": [
    {
      "name": "mapstats",
      "values": {{ data }}
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "ordinal",
      "range": "width",
      "domain": {"data": "mapstats", "field": "data.label"}
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true,
      "domain": {"data": "mapstats", "field": "data.giniindex"}
    }
  ],
  "axes": [
    {
        "type": "x",
        "scale": "x",
        "properties": {
            "axis": { "stroke": { "value": "transparent" } },
            "ticks": { "stroke": { "value": "transparent" } },
            "labels": {
                "angle": { "value": -45 },
                "baseline": { "value": "middle" },
                "align": {"value": "right"}
            }
        }
    },
    {
        "type": "y",
        "scale": "y",
        "ticks": 6,
        "offset": 5,
        "nice": true,
        "title": "gini index"
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {"data": "mapstats"},
      "properties": {
        "enter": {
          "x": {"scale": "x", "field": "data.label"},
          "width": {"scale": "x", "band": true, "offset": -1},
          "y": {"scale": "y", "field": "data.giniindex"},
          "y2": {"scale": "y", "value": 0},
          "fill": {"value": "steelblue"}
        }
      }
    }
  ]
}
