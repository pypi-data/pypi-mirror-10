#!/usr/bin/python2

import sys
from optparse import OptionParser

from light_compositing import light_compositing


def parse_opts():
    usage = "usage: %prog [options] [directory]"
    parser = OptionParser(usage=usage)
    parser.add_option("-c", "--count", dest="count", type="int", default=-1,
                      metavar="COUNT", help="The number of images to use.")
    parser.add_option("-d", "--downsample", dest="downsample", type="int", default=0,
                      metavar="DOWN", help="The number of times to downsample the image.")
    parser.add_option("-o", "--output", dest="output", type="string", default="diffuse_color_light.png",
                      metavar="OUTPUT", help="The output file name.")
    parser.add_option("-v", "--verbose", dest="verbose", action="store_true",
                  metavar="VERBOSE", help="Print debug information.")

    (options, arguments) = parser.parse_args()
    return (options, arguments)


def main():
    (options, arguments) = parse_opts()
    if(len(arguments) == 0):
        directory = "."
    else:
        directory = arguments[0]

    light_compositing.diffuse_light(directory, options.output,
                                    count=options.count,
                                    downsample=options.downsample,
                                    verbose=options.verbose)

main()
