{%- macro date_xml(part) -%}
<common:year>{{ part.year }}</common:year>
{%- if part.month -%}
<common:month>{{ part.month }}</common:month>
{%- if part.day -%}
<common:day>{{ part.day }}</common:day>
{%- endif -%}
{%- endif -%}
{%- endmacro -%}

{%- macro contributor_orcid(orcid) -%}
<common:uri>http://orcid.org/{{ orcid }}</common:uri>
<common:path>{{ orcid }}</common:path>
<common:host>orcid.org</common:host>
{%- endmacro -%}

{%- macro language_code(code) -%}
<common:language-code>{{ code }}</common:language-code>
{%- endmacro -%}

{%- macro country(part) -%}
<common:country {%- if part.visibility -%}visibility="{{ part.visibility }}"{%- endif -%}>{{ part.code }}</common:country>
{%- endmacro -%}

{%- macro organization(subrecord) -%}
<common:name>{{ subrecord.name }}</common:name>
{%- if subrecord.address -%}
<common:address>
	{%- if subrecord.address.city -%}
    <common:city>{{ subrecord.address.city }}</common:city>
    {%- endif -%}
    {%- if subrecord.address.region -%}
    <common:region>{{ subrecord.address.region }}</common:region>
    {%- endif -%}
    {%- if subrecord.address.country -%}
    <common:country>{{ subrecord.address.country }}</common:country>
    {%- endif -%}
</common:address>
{%- endif -%}
{%- if subrecord.disambiguated_organization -%}
<common:disambiguated-organization>
  <common:disambiguated-organization-identifier>{{ subrecord.disambiguatd_organization.identifier }}</common:disambiguated-organization-identifier>
  <common:disambiguation-source>{{ subrecord.disambiguatd_organization.disambiguation_source }}</common:disambiguation-source>
</common:disambiguated-organization>
{%- endif -%}
{%- endmacro -%}

<?xml version="1.0" encoding="UTF-8"?>
{%- block content -%}{%- endblock -%}


