{%- extends "base.xml" -%}
{%- block content -%}
<work:work
  xmlns:common="http://www.orcid.org/ns/common" xmlns:work="http://www.orcid.org/ns/work"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.orcid.org/ns/work ../work-2.0_rc1.xsd "
  {% if record.visibility %}
  visibility="{{ record.visibility }}"
  {% endif %}
  {% if record.put_code %}
  put-code="{{ record.put_code }}"
  {% endif %}>
  {%- if record.title -%}
  <work:title>
    <common:title>{{ record.title.title }}</common:title>
    {%- if record.title.subtitle -%}
    <common:subtitle>{{ record.title.subtitle }}</common:subtitle>
    {%- endif -%}
    {%- if record.title.translated_title -%}
    <common:translated-title language-code="{{ record.title.translated_title.language_code }}">
      {{ record.title.translated_title.translated_title }}
    </common:translated-title>
    {%- endif -%}
  </work:title>
  {%- endif -%}
  {%- if record.journal_title -%}
  <work:journal-title>{{ record.journal_title }}</work:journal-title>
  {%- endif -%}
  {%- if record.short_description -%}
  <work:short-description>{{ record.short_description }}</work:short-description>
  {%- endif -%}
  {%- if record.citation -%}
  <work:citation>
    <work:citation-type>{{ record.citation.citation_type }}</work:citation-type>
    <work:citation>{{ record.citation.citation }}</work:citation>
  </work:citation>
  {%- endif -%}
  {%- if record.type -%}
  <work:type>{{ record.type }}</work:type>
  {%- endif -%}
  {%- if record.publication_date -%}
  <common:publication-date>
    {{ date_xml(record.publication_date) }}
  </common:publication-date>
  {%- endif -%}
  {%- if record.external_identifiers -%}
  <work:external-identifiers>
    {%- for external_identifier in record.external_identifiers -%}
    <work:work-external-identifier>
      <work:work-external-identifier-type>
      {{ external_identifier.type }}
      </work:work-external-identifier-type>
      <work:work-external-identifier-id>
      {{ external_identifier.id }}
      </work:work-external-identifier-id>
    </work:work-external-identifier>
    {%- endfor -%}
  </work:external-identifiers>
  {%- endif -%}
  {%- if record.url %}
  <work:url>{{ record.url }}</work:url>
  {%- endif -%}
  {%- if record.contributors -%}
  <work:contributors>
    {%- for contributor in record.contributors -%}
    <work:contributor>
      {%- if contributor.orcid -%}
      <common:contributor-orcid>
        {{ contributor_orcid(contributor.orcid) }}
      </common:contributor-orcid>
      {%- endif -%}
      {%- if contributor.credit_name -%}
      <work:credit-name visibility={{ contributor.credit_name.visibility }}>{{ contributor.credit_name.name }}</work:credit-name>
      {%- endif -%}
      {%- if contributor.email -%}
      <work:contributor-email>{{ contributor.email }}</work:contributor-email>
      {%- endif -%}
      {%- if contributor.attributes -%}
      <work:contributor-attributes>
        <work:contributor-sequence>{{ contributor.attributes.sequence }}</work:contributor-sequence>
        <work:contributor-role>{{ contributor.attributes.role }}</work:contributor-role>
      </work:contributor-attributes>
      {%- endif -%}
    </work:contributor>
    {%- endfor -%}
  </work:contributors>
  {%- endif -%}
  {%- if record.language_code -%}
  {{ language_code(record.language_code) }}
  {%- endif -%}
  {%- if record.country -%}
  {{ country(record.country) }}
  {%- endif -%}
</work:work>
{%- endblock -%}