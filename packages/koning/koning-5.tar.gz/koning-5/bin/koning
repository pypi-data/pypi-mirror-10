#!/usr/bin/python3
#
#

""" KONING - 24x7 support VOOR de crisis !!! """

__copyright__ = "Copyright 2015, B.H.J Thate"

## ENVIRONMENT

import os, sys, time

os.environ["PYTHONPATH"] = "."

tz = os.environ.get("TZ", None)
if not tz: os.environ["TZ"] = "Europe/Amsterdam"
time.tzset()

sys.path.insert(0, os.path.abspath(os.curdir))

## IMPORTS

from wet.kernel import kernel, cfg, plugs
from wet.plugs import Plugs
from wet.bots.cli import CLI
from wet.thing import Thing
from wet.log import init

from koning import __version__

import readline
import time
import sys
import os

## MAIN

def main():
    kernel.boot("KONING", shell=True, version=__version__, workdir=os.path.expanduser("~/koning.data"))
    plugs.load("koning")
    plugs.init(cfg.init)
    bot = CLI()
    bot.start()

if __name__ == "__main__": 
    try: main()
    except (EOFError, KeyboardInterrupt): pass
    kernel.shutdown()
    os._exit(0)
