<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xmlns:sy="http://purl.org/rss/1.0/modules/syndication/" xmlns:media="http://search.yahoo.com/mrss/" xml:lang="{site.lang_code}">
  <id>{site.canonical_url}</id>
  <title type="text">{site.title}</title>
  <subtitle type="text">{site.tagline}</subtitle>
  <link rel="alternate" type="text/html" href="{site.canonical_url}" />
  <link rel="self" type="application/atom+xml" href="{site.feed_url}" />
  <updated>{site.last_generated}</updated>
  <sy:updatePeriod>hourly</sy:updatePeriod>
  <sy:updateFrequency>1</sy:updateFrequency>

  <rights type="html">{site.copyright_notice}</rights>
  <generator uri="https://github.com/mahmoud/chert">Chert 0.1</generator>
  {#entries}
  <entry>
    <id>{site.canonical_url}{.output_filename}</id>
    <author>
      <name>{#.author_name}{.author_name}{:else}{site.author_name}{/author_name}</name>
      <uri>{site.canonical_url}</uri>
    </author>
    <title>{.title}</title>
    <link rel="alternate" type="text/html" href="{site.canonical_url}{.output_filename}" />
    <published>{.publish_date_iso8601}</published>
    <updated>{?.update_date_iso8601}{.update_date_iso8601}{:else}{.publish_date_iso8601}{/update_date_iso8601}</updated>
    {#tags}<category term="{.}"/>{/tags}
    <content type="html">{.inline_rendered_content}</content>
  </entry>
  {/entries}
</feed>
